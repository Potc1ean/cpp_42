.PHONY: all clean fclean re make

NAME = prog

#//////////////////////////////////////////////////////////////////////////////
#		ALL FILES
#//////////////////////////////////////////////////////////////////////////////

SRCS =	srcs/tests.cpp	srcs/Account.cpp 	\

HEAD =	includes/Account.hpp

#//////////////////////////////////////////////////////////////////////////////
#		COMMAND SHORTCUTS
#//////////////////////////////////////////////////////////////////////////////

CC = g++
CF = -Wall -Wextra -Werror -std=c++98 -pedantic -g

RM = rm -rf

#//////////////////////////////////////////////////////////////////////////////
#		RULES
#//////////////////////////////////////////////////////////////////////////////

all: ${NAME}

# Binary creation

${NAME}: ${SRCS} ${HEAD}
	${CC} ${CF} ${SRCS} -o ${NAME}

# Mandatory rules

clean:
	${RM}

fclean: clean
	${RM} ${NAME}

re: fclean all